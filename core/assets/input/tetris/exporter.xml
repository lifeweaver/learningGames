<exporter>

    <!-- identifier of the exporter -->
	<name>libgdx.xml</name>

	<!-- name for the dropbox -->
    <displayName>LibGDX</displayName>

	<!-- description of the exporter -->
    <description>XML format for libGDX loader</description>

	<!-- exporter version -->
	<version>1.0</version>

	<!-- direction of the y axis: up / down -->
	<yAxisDirection>up</yAxisDirection>

	<!-- physics engine to use: box2d, chipmunk -->
	<physicsEngine>box2d</physicsEngine>

	<!-- name of the template file -->
    <template>libgdx.xml</template>

	<!-- file exension for the data file -->
	<fileExtension>xml</fileExtension>

	<!-- anchor point settings -->
	<anchorPoint>
	    <!-- are anchor points supported ? yes/no -->
		<enabled>no</enabled>
	</anchorPoint>

    <origin>
        <!--
        origin (0/0) point of the polygons
        can be set to "anchorPoint" or "fixed"
        Use
		<relX>0.5</relX>
		<relY>0.5</relY>
		to specify a fixed origin.
		Default is 0.5/0.5
        -->
        <type>fixed</type>
        <relX>0</relX>
        <relY>0</relY>
    </origin>

	<!-- custom global parameters -->
	<global>
		<parameter>
			<name>ptm_ratio</name>
			<displayName>PTM-Ratio</displayName>
			<description>PTM ratio of the sprites. Must be multiplied by 2 when working with hd (retina display) sprites</description>
			<type>float</type>
			<default>32.0</default>
		</parameter>
	</global>

	<!-- custom body parameters -->
	<body>
		<parameter>
			<name>is_dynamic</name>
			<displayName>Is dynamic</displayName>
			<description>A non-dynamic body is immovable such as a wall or the ground.</description>
			<type>bool</type>
			<default>true</default>
		</parameter>

		<parameter>
			<name>linear_damping</name>
			<displayName>Linear damping</displayName>
			<description>Linear damping is used to reduce the linear velocity.</description>
			<type>float</type>
			<default>0.0</default>
		</parameter>

		<parameter>
			<name>angular_damping</name>
			<displayName>Angular damping</displayName>
			<description>Angular damping is used to reduce the angular velocity.</description>
			<type>float</type>
			<default>0.0</default>
		</parameter>

		<parameter>
			<name>fixed_rotation</name>
			<displayName>Fixed rotation</displayName>
			<description>Set to true if body should be prevented from rotating</description>
			<type>bool</type>
			<default>false</default>
		</parameter>

		<parameter>
			<name>is_bullet</name>
			<displayName>Is bullet</displayName>
			<description>Is this a fast moving body that should be prevented from tunneling through other moving bodies?</description>
			<type>bool</type>
			<default>false</default>
		</parameter>

		<parameter>
			<name>allow_sleep</name>
			<displayName>Allow sleep</displayName>
			<description>Set this flag to false if this body should never fall asleep.</description>
			<type>bool</type>
			<default>true</default>
		</parameter>
	</body>

	<!-- custom fixture parameters -->
	<fixture>
		<parameter>
			<name>density</name>
			<displayName>Density</displayName>
			<description>Density of the shape. Used for calculating the mass.</description>
			<type>float</type>
			<default>2.0</default>
		</parameter>
		<parameter>
			<name>restitution</name>
			<displayName>Restitution</displayName>
			<description>Restitution defines how much a shape bounces.</description>
			<min>0.0</min>
			<min>1.0</min>
			<type>float</type>
			<default>0.0</default>
		</parameter>

		<parameter>
			<name>friction</name>
			<displayName>Friction</displayName>
			<description>Friction</description>
			<type>float</type>
			<default>0.0</default>
		</parameter>
		<parameter>
			<name>is_sensor</name>
			<displayName>Is sensor</displayName>
			<description>A sensor shape collects contact information but never generates a collision response.</description>
			<type>bool</type>
			<default>false</default>
		</parameter>
        <parameter>
            <name>filter_group_index</name>
            <displayName>Group</displayName>
            <description>Collision group</description>
            <type>uint16</type>
            <default>0</default>
        </parameter>

        <parameter>
            <name>filter_bitfield</name>
            <type>bitfield</type>
            <size>16</size>
        </parameter>

        <parameter>
            <name>filter_category_bits</name>
            <displayName>Cat.</displayName>
            <description>Collision category</description>
            <type>uint16</type>
            <default>1</default>
            <bitfield>yes</bitfield>
        </parameter>
        <parameter>
            <name>filter_mask_bits</name>
            <displayName>Mask</displayName>
            <description>Collision mask</description>
            <type>uint16</type>
            <default>65535</default>
            <bitfield>yes</bitfield>
        </parameter>
    </fixture>
</exporter>

